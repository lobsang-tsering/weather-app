<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tibet"
    tools:context="com.example.android.weather.MainActivity">




    <TextView
        android:text="Enter a city Name"
        android:textColor="#f5f5f5"
        android:textSize="30sp"
        android:gravity="center"
        android:id="@+id/textview"
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_below="@id/textview"
        android:textColorHint="#f5f5f5"
        android:layout_marginTop="10dp"
        android:padding="20px"
        android:textColor="#f5f5f5f5"
        android:hint="Enter City..."
        android:id="@+id/locatinEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />


    <Button
        android:onClick="forcastWeather"
        android:layout_marginTop="30dp"
        android:id="@+id/searchBtn"
        android:text="Search"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/locatinEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center_horizontal"
        android:padding="30dp"
        android:id="@+id/weatherforcastTv"
        android:layout_below="@id/searchBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
